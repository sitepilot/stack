# {{ ansible_managed }}
{{ user_logs_path }}/*.log {
        daily
        rotate 14
        size 1M
        compress
        missingok
        notifempty
        dateext
        create 0664 {{ user_name }} {{ user_group }}
        sharedscripts
        postrotate
                invoke-rc.d nginx rotate >/dev/null 2>&1
        endscript
}
